{
  "name": "circuit-breaker",
  "version": "1.0.0",
  "description": "A neon cyberpunk pinball game with realistic physics, level progression, and dynamic audio",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "game",
    "arcade",
    "cyberpunk",
    "neon",
    "physics",
    "typescript",
    "html5",
    "canvas"
  ],
  "author": "sl4ppy",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "howler": "^2.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sl4ppy/circuit-breaker.git"
  },
  "bugs": {
    "url": "https://github.com/sl4ppy/circuit-breaker/issues"
  },
  "homepage": "https://sl4ppy.github.io/circuit-breaker/"
}
